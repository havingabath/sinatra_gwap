<% @candidates.each do |can| %>    
    <article>
	<p>  
      <%= can.sentence %>  
    </p>  
    <p class = "lang_source">  
      Source: <%= can.source_language%>      Target: <%= can.target_language%> 
    </p>
    <p class="meta">
	<%
	chains = can.chains.select {|ch| ch.progress == 3}
	chains.sort! {|ch1, ch2| ch2.score <=> ch1.score}
	%>
    	<% chains[0..2].each do |ch| %>
				Score(<%=ch.score%>) - <%= ch.l2attempt.sentence %></br>
		<% end %>
    </p>  
  </article>  
<% end %>



