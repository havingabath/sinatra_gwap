<% if !(@canidates) %>
<h3>You have not inputted any candidate sentences!</h3>
<%end%>
<% @candidates.each do |can| %>    
    <article>
	<p class="translation">  
      <%= can.sentence %>  
    </p>  
    <p class = "meta2">  
      Source: <%= can.source_language%>      Target: <%= can.target_language%> 
    </p>
    <p>
	<%
	chains = can.chains.select {|ch| ch.progress == 3}
	chains.sort! {|ch1, ch2| ch2.score <=> ch1.score}
	%>
    	<% chains[0..2].each do |ch| %>
				<span class="trans_score">Score(<%=ch.score%>)</span> - <%= ch.l2attempt.sentence %></br>
		<% end %>
    </p>  
  </article>  
<% end %>



